 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class ="mt-5 d-flex justify-content-lg-center">
  <div class="col-md-7 mt-5 bg-light text-dark border border-lg-dark rounded pb-3">
    <h2 class="text-center mt-3 text-dark">Maropost Project Management </h2>
 <form>
 <div class="form-group pt-3 mt-3">
   <%= f.label :Email %><br />
   <%= f.email_field :email,autofocus: true, placeholder: "Enter email",class: "form-control"%>
  </div>
  <div class="form-group">
   <%= f.label :password %><br />
   <%= f.password_field :password,placeholder: "Enter Password", autocomplete: "off",class: "form-control" %>
  </div>
   <div class="float-right">
   <%= f.check_box :remember_me,class:"checkbox checkbox-primary" %>
   <%= f.label :remember_me %> 
   </div>
   <br />
  <div class = "float-left">
    <%= f.submit "Log in", class: "btn btn-primary" %>
   </div>
</form>
</div>
  </div>
</div>
 <% end %>

